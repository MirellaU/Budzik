<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    tools:context="com.example.mirella.budzik.MainActivity">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="2dp"
        android:background="@android:color/holo_green_dark"
        android:headerBackground="@android:color/holo_green_dark"
        android:numbersSelectorColor="@android:color/holo_green_dark"
        android:padding="5dp"
        android:textColor="@android:color/white"
        tools:numbersSelectorColor="@android:color/holo_green_light" />

    <Button
        android:id="@+id/alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@android:color/holo_green_dark"
        android:padding="5dp"
        android:text="Ustaw alarm"
        android:textColor="@android:color/white"
        tools:clickable="true" />

    <Button
        android:id="@+id/wylaczAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="2dp"
        android:background="@android:color/holo_green_dark"
        android:padding="5dp"
        android:text="Wyłącz alarm"
        android:textColor="@android:color/white"
        tools:clickable="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_audiotrack_black_24dp"
        android:background="@android:color/white"
        tools:clickable="true"
        />
</LinearLayout>
